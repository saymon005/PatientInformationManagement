@model PatientInformation.Models.PatientInfo

@{
    ViewData["Title"] = "EditPatientInfo";
}

<h1>EditPatientInfo</h1>

<h4>PatientInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPatientInfo">
